[Unit]
Description=naglite4 webserver
After=syslog.target

[Service]
WorkingDirectory=/apps/naglite4
User=naglite4
Group=naglite4
ExecStart=/apps/naglite4/.venv/bin/gunicorn -b 127.0.0.1:4080 main:app
# use optional environment files
EnvironmentFile=-/apps/naglite4/environment
EnvironmentFile=-/apps/naglite4/.env
Restart=always
KillSignal=SIGQUIT
Type=simple
StandardError=syslog
NotifyAccess=all

[Install]
WantedBy=multi-user.target